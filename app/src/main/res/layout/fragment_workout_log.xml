<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".workouttracker.WorkoutLogFragment">

        <TextView
                android:text="Workout Log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workoutLogTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="34sp"
                android:layout_marginTop="32dp" />

        <Button
                android:text="Add to Log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonToAddView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"
                app:layout_constraintEnd_toStartOf="@+id/exRecoBtn"
                android:layout_marginEnd="29dp"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView"
                android:backgroundTint="#8A0202" />

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="410dp"
                android:layout_height="424dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/recyclerView"
                android:background="#CFCFCF"
                app:layout_constraintTop_toBottomOf="@+id/workoutLogTitle"
                android:layout_marginTop="16dp" />

        <Button
                android:text="Recommendations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exRecoBtn"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView"
                android:layout_marginEnd="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="#8A0202" />

        <TextView
                android:text="Get Fit Or Die Tryin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_marginEnd="203dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="150dp"
                android:textColor="#8A0202"
                android:textSize="34sp"
                app:layout_constraintHorizontal_bias="0.381"
                tools:layout_editor_absoluteY="650dp" />

        <Button
                android:text="Clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clearBtn"
                app:layout_constraintTop_toBottomOf="@+id/buttonToAddView"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="135dp"
                android:layout_marginEnd="182dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="#8A0202"
                app:layout_constraintHorizontal_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>